<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.zh.mapper.ZhCollectRecordMapper">
    
    <resultMap type="ZhCollectRecord" id="ZhCollectRecordResult">
        <result property="id"    column="id"    />
        <result property="deviceCode"    column="device_code"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="pointName"    column="point_name"    />
    </resultMap>

    <sql id="selectZhCollectRecordVo">
        select id, device_code, start_time, end_time, point_name from zh_collect_record
    </sql>

    <select id="selectZhCollectRecordList" parameterType="ZhCollectRecord" resultMap="ZhCollectRecordResult">
        <include refid="selectZhCollectRecordVo"/>
        <where>  
            <if test="deviceCode != null  and deviceCode != ''"> and device_code = #{deviceCode}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
            <if test="endTime != null "> and end_time = #{endTime}</if>
            <if test="pointName != null  and pointName != ''"> and point_name like concat('%', #{pointName}, '%')</if>
        </where>
    </select>
    
    <select id="selectZhCollectRecordById" parameterType="Long" resultMap="ZhCollectRecordResult">
        <include refid="selectZhCollectRecordVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertZhCollectRecord" parameterType="ZhCollectRecord" useGeneratedKeys="true" keyProperty="id">
        insert into zh_collect_record
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null  and deviceCode != ''">device_code,</if>
            <if test="startTime != null ">start_time,</if>
            <if test="endTime != null ">end_time,</if>
            <if test="pointName != null  and pointName != ''">point_name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null  and deviceCode != ''">#{deviceCode},</if>
            <if test="startTime != null ">#{startTime},</if>
            <if test="endTime != null ">#{endTime},</if>
            <if test="pointName != null  and pointName != ''">#{pointName},</if>
         </trim>
    </insert>

    <update id="updateZhCollectRecord" parameterType="ZhCollectRecord">
        update zh_collect_record
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceCode != null  and deviceCode != ''">device_code = #{deviceCode},</if>
            <if test="startTime != null ">start_time = #{startTime},</if>
            <if test="endTime != null ">end_time = #{endTime},</if>
            <if test="pointName != null  and pointName != ''">point_name = #{pointName},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteZhCollectRecordById" parameterType="Long">
        delete from zh_collect_record where id = #{id}
    </delete>

    <delete id="deleteZhCollectRecordByIds" parameterType="String">
        delete from zh_collect_record where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getMaxId" resultType="java.lang.Long">
        select max(id) id from zh_collect_record;
    </select>

</mapper>